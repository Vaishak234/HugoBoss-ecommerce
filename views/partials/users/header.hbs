<script>

  function searchProduct() {
      let searchInp = document.querySelector('#searchInp').value
      let displayProducts = document.querySelector('.displayProducts')
   
      if(searchInp != '') {
         fetch('http://localhost:3000/search-product/'+searchInp)
        .then(res=>res.json())
        .then(data=>{
          console.log(data)
          if(data.status && data.products.length != 0){
              console.log('hi')
              displayProducts.style.display = 'block'
               data.products.forEach((product) => {

                   const movies = '<a href = "/product/'+product._id+'" ><div class="products"><img src="/uploads/' + product.images[0] + '" alt=""><p class="title">' + product.title + '</p></div> </a>';
                   displayProducts.insertAdjacentHTML("beforeend", movies);
                   console.log(movies)
                 });
                
             }else{
                displayProducts.style.display = 'none'
             }
        })
      }else{
        displayProducts.style.display = 'none'
      }
  }

  function getProductsAmount(){
    
         fetch('http://localhost:3000/cart/products-quantity')
        .then(res=>res.json())
        .then(data=>{
          console.log(data)
          if(data.quantity){
            document.getElementById('numberOfProducts').innerText = data.quantity
          }else{
              document.getElementById('numberOfProducts').innerText = 0
          }
        })
  }

