<script>

  // Get the button:
let mybutton = document.getElementById("scrollBtn");

// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    mybutton.style.display = "block";
  } else {
    mybutton.style.display = "none";
  }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
  document.body.scrollTop = 0; // For Safari
  document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
}


  
  function openNav(){
    document.getElementById('middle').style.display = 'flex'
    document.getElementsByClassName('barIcon')[0].style.display = "none"
    document.getElementsByClassName('closeIcon')[0].style.display = "block"
    document.body.style.overflow = "hidden"
  }

  function closeNav(){
      document.getElementById('middle').style.display = 'none'
      document.getElementsByClassName('barIcon')[0].style.display = "block"
      document.getElementsByClassName('closeIcon')[0].style.display = "none"
      document.body.style.overflow = "scroll"
  }


  function searchProduct() {
      let searchInp = document.querySelector('#searchInp').value
      let displayProducts = document.querySelector('.displayProducts')
   
      if(searchInp != '') {
         fetch('/search-product/'+searchInp)
        .then(res=>res.json())
        .then(data=>{
          console.log(data)
          if(data.status && data.products.length != 0){
              displayProducts.style.display = 'block'
               data.products.forEach((product) => {

                   const movies = '<a href = "/product/'+product._id+'" ><div class="searchproducts"><img src="/uploads/' + product.images[0] + '" alt=""><p class="title" style="color:white">' + product.title + '</p></div> </a>';
                   displayProducts.insertAdjacentHTML("beforeend", movies);
                 });
                
             }else{
                displayProducts.style.display = 'none'
             }
        })
      }else{
        displayProducts.style.display = 'none'
      }
  }

  function getProductsAmount(){
    
         fetch('/cart/products-quantity')
        .then(res=>res.json())
        .then(data=>{
          console.log(data)
          if(data.quantity){
            document.getElementById('numberOfProducts').innerText = data.quantity
          }else{
              document.getElementById('numberOfProducts').innerText = 0
          }
        })
  }


  getProductsAmount()

  
</script>