<div class="header__background">
    {{>users/header}}
</div>


<section class="loginContainer">
   <div class="loaderContainer">
        <div id="circularLoader" class="spinner-border text-primary "   role="status"></div>  
     </div>
    <div id="productsContainer" class="register__container">
        <div class="register">
            <h2 class="title">Login </h2>
               {{#each messages}}
            <div
              class="alert alert-warning alert-dismissible fade show"
              role="alert"
              style="width: 400px; margin:auto;"
            >
              <strong>
                {{this}}
              </strong>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
              ></button>
            </div>
          {{/each}}

            <form class="register__form" method="post" action="/auth/login">
                <input type="email" name="email" placeholder="Enter your email">
                <input type="password" name="password" placeholder="Password">
                <a class="forgot__link" href="/auth/user/forgot-password">forgot password</a>
                <button type="submit">Login</button>
                 <a class="login__link" href="/auth/register">Don't have an account ?<span style="text-decoration: underline"> register</span></a>
                 <p style="color: black;text-align:center; font-size:20px;font-weight:600; margin:15px 0;"> or</p>

        <div>
          <a class="hollow button primary " href="/auth/google">
            <img width="25px" height="25px" style="margin-bottom:3px; margin-right:10px" alt="Google login" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
            Sign in with Google
          </a>
        </div>
        
         </form>
        </div>
    </div>
</section>

{{>users/footer}}


<style>
  .loginContainer{
     min-height: 80vh;
  }
  .loaderContainer{
       position: absolute;
       top: 40%;
       left: 50%;
       transform: translate(-50%,-50%);
    }
    .header__background{
        background-color: black;
    }
    .register__container{
        width: 100%;
        height:80vh;
        display: flex;
        align-items: center;
        display: none;
        
    }
    .register{
        max-width: 600px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: auto;
    }
    .register__form{
        display: flex;
        flex-direction: column;
        padding: 20px;
        max-width: 460px;
    }
    .register .title{
        color: rgba(0, 0, 0);
        font-size: 38px;
        font-weight: 700;
        text-align: center;
        margin-left: -10px;
       

    }
    .register__form input{
        width: 400px;
        padding: 15px 15px 10px 15px;
        margin-bottom: 20px;
        border: 1px solid rgba(0, 0, 0, 0.258);
        outline: none;
    }
    .register__form button {
        outline: 0;
        border: 0;
        background-color: rgba(0, 0, 0);
        padding: 10px;
        color: white;
        font-size: 18px;
    }
    .register__form button:hover {
        background-color: rgba(0, 0, 0, 0.793);
    }
    .register__form .forgot__link{
        margin-bottom: 8px;
        color: rgb(60, 60, 255);
        font-size: 16px;
        text-decoration: underline;

    }
    .register__form .login__link{
        color: rgba(0, 0, 0, 0.463);
        text-decoration: none;
        margin-top: 8px;
        font-size: 15px;
        color: black;
    }
    .hollow {
      background-color: black;
      color: white;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 12px 15px;
      margin-top: 10px;
    }
    input::placeholder{
      color: black;
    }
</style>

<script>

    window.addEventListener('load',()=>{
       
        document.getElementById('productsContainer').style.display ='flex'
        document.getElementById('circularLoader').style.display ='none'
    })

</script>