<div class="header__background">
    {{>users/header}}
</div>

 <div class="loaderContainer">
        <div id="circularLoader" class="spinner-border text-primary "   role="status"></div>  
     </div>
<section class="loginContainer">
    <div id="productsContainer" class="register__container">
        <div class="register">
            <h2 class="title">Reset password</h2>
            <p>{{alert.msg}}</h4>
            <form class="register__form" method="post" action="/auth/reset-password">
                <input type="password" name="password" placeholder="Enter your new password">
                <input type="password" name="confirmPassword" placeholder="confirm password">
                <button type="submit">Reset password</button>
            </form>
        </div>
    </div>
</section>

<style>
     .header__background{
        background-color: black;
    }
      .loginContainer{
     min-height: 80vh;
    }
  .loaderContainer{
       position: absolute;
       top: 40%;
       left: 50%;
       transform: translate(-50%,-50%);
    }
    
    .register__container{
        width: 100%;
        height: 82vh;
        display: flex;
        align-items: center;
        display: none;
        
    }
    .register{
        max-width: 600px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: auto;
    }
    .register__form{
        display: flex;
        flex-direction: column;
        padding: 20px;
        max-width: 460px;
      
    }
    .register .title{
        color: rgba(0, 0, 0, 0.532);
        font-size: 36px;
        font-weight: 600;
        margin-left: 20px;
    }
    .register__form input{
        width: 400px;
        padding: 15px 15px 10px 15px;
        margin-bottom: 20px;
        border: 1px solid rgba(0, 0, 0, 0.258);
        outline: none;
    }
    .register__form button {
        outline: 0;
        border: 0;
        background-color: rgba(0, 0, 0, 0.627);
        padding: 10px;
        color: white;
        font-size: 18px;
    }
    .register__form button:hover {
        background-color: rgba(0, 0, 0, 0.493);
    }
    .register__form a{
        color: rgba(0, 0, 0, 0.463);
        text-decoration: none;
        margin-top: 8px;
    }
</style>

<script>

    window.addEventListener('load',()=>{
       
            document.getElementById('productsContainer').style.display ='flex'
            document.getElementById('circularLoader').style.display ='none'
       
    })
</script>