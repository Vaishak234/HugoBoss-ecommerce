    }
    form{
        max-width: 1200px;
        padding: 30px 20px;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    }
    .input__container{
        width: 100%;
        display: flex;
        justify-content: center;
        column-gap: 30px;
        flex: 1;
    }
    .input__container input ,.input__container select{
        width: 500px;
        padding: 10px 15px 10px 10px;
        outline: none;
        margin: 20px;
    }
    .input__container .large{
        width: 1080px;
        padding-bottom: 65px;
        overflow-wrap: break-word;
    }
    .inp-btn{
        width: 200px;
        color: white;
        outline: none;
        border: none;
        font-size: 18px;
        font-weight: 700;
        padding: 12px 20px;
        background-color: rgba(0, 0, 0, 0.738);
        margin-left: 20px;
        margin-top: 30px;
    }
    .inp-btn:hover{
        background-color: rgba(0, 0, 0, 0.444);
    }
    .title{
        margin-left: 20px;

    }
    .title h2{
        font-weight: 700;
        color: rgba(0, 0, 0, 0.563);
    }
    .delevery{
        max-width: 22%;
