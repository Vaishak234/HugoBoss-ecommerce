{{>admin/sideNav}}

<div class="section__container">
   
   <div class="form__comtainer">
   
     <form action="/admin/addProduct" enctype="multipart/form-data" method="post">
      <div class="title">
        <h2>Add Product</h2>
      </div>
        <div class="input__container">
            <input type="text" name="title" placeholder="Title">
            <input type="number" inputmode="numeric" value='0' name="price" placeholder="Price">
        </div>
        <div class="input__container">
            <input type="text" name="artno" placeholder="Art.no">
            <input type="" name="color" placeholder="Colour">
        </div>
        <div class="input__container">
            <input type="text" name="ratings" placeholder="Rating">
            <input type="" name="fit" placeholder="Fit">
        </div>
        <div class="input__container">
            <input type="text" name="composition" placeholder="Composition">
              <select required id="sizeInput" name="cateogry"  >
              <option hidden value="">Select</option>
              <option value="mens">Mens</option>
              <option value="womens">Womens</option>
              <option value="kids">Kids</option>
              <option value="accessories">Accessories</option>
            </select>
        </div>
        <div class="input__container">
            <input type="text" name="description" class="large" placeholder="Description">
        </div>
         <div class="input__container">
            <input type="file" multiple name="images" class="images" placeholder="Select images">
            <input type="number" value='0'  name="delevery" class="delevery" placeholder="Delevery">
        </div>
        
        <div class="input__size">
            <label  for="">Size : </label>
            <input type="checkbox"  name="small" id="small"  value="true"> <label for="small">Small</label>
            <input type="checkbox"  name="medium" id="medium"  value="true"> <label for="medium">Medium</label>
            <input type="checkbox"  name="large" id="large" value="true"> <label for="large">Large</label>
            <input type="checkbox"  name="xl" id="xl" value="true"> <label for="Xl">Xl</label>
            <input type="checkbox"  name="xxl " id="xxl" value="true"> <label for="xxl">XXl</label>
            <input type="checkbox"  name="xxxl" id="xxxl" value="true"> <label for="xxxl">XXXl</label>
        </div>
         
        <button type="submit" class="inp-btn">Add Product</button>
     </form>
   </div>
</div>




<style>
